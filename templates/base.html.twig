    <style>
      body {
        background-image: src=
          "{{ asset('public/images_de_mon_site/background.webp') }}";
      }
    </style>
    <nav
      class="cc-navbar navbar navbar-expand-lg navbar-dark position-fixed w-100"
    >
      <div class="container-fluid">
        <a class="navbar-brand text-uppercase mx-4 py-3 fw-bolder" href="#"
